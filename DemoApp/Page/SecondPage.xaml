<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoApp.Page.SecondPage"
             xmlns:vm="clr-namespace:DemoApp.ViewModel"
             x:DataType="{x:Type vm:SecondPageVM}"
             Title="SecondPage">
    <VerticalStackLayout 
            Spacing="25"
            Padding="30,20">
        <Entry x:Name="labela1" 
               FontSize="20"
               Text="{Binding TextInput, Mode=TwoWay}"
               Placeholder="Type text here"/>
        <Label x:Name="LabelOneVal" 
               FontSize="20"/>
        <Button Text="Update content" 
                Command="{Binding ChangeLabel}"
                CommandParameter="{x:Reference LabelOneVal}"/>
        
    </VerticalStackLayout>
</ContentPage>